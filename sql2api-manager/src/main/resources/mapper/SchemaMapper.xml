<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wkclz.sql2api.manager.dao.SchemaMapper">

    <select id="getTables"
            parameterType="com.wkclz.sql2api.manager.domain.vo.TableInfoPo"
            resultType="com.wkclz.sql2api.manager.domain.vo.TableInfoPo">
        SELECT
            table_schema,
            table_name
        FROM
            information_schema.`TABLES`
        WHERE
            table_schema = #{tableSchema}
            AND table_name IN ( <foreach collection="tableNames" item="item" separator=","> #{item} </foreach> )
    </select>

</mapper>

